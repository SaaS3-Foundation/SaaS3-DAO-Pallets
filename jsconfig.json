{ 
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@c/*": [
        "src/components/*"
      ],
      "@p/*": [
        "src/pages/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": ["src","*.d.ts"],
  "exclude": ["node_modules", "dist"]
}